{
  "name": "@playnet/mesh",
  "version": "0.2.0",
  "description": "Mesh is a service that allows synchronising data between devices using Node, Deno, Bun or the browser.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./src/*": "./src/*"
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE.md",
    "NOTICE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "bun src/index.ts",
    "test": "bun test",
    "test:ts": "bun test test/**/*.test.ts",
    "test:ts:system": "bun test test/system/**/*.test.ts",
    "build": "bun run build:ts && bun run build:browser",
    "build:ts": "tsc",
    "build:browser": "esbuild src/index.ts --bundle --format=esm --sourcemap \"--external:node:*\" \"--external:ws\" --minify --outdir=build",
    "prepublishOnly": "bun run build",
    "type-check": "tsc --noEmit",
    "type-check:tests": "tsc --noEmit --project tsconfig.test.json"
  },
  "keywords": [
    "mesh",
    "sync",
    "p2p",
    "graph",
    "database",
    "typescript"
  ],
  "author": "Playnet",
  "license": "Zlib, MIT, Apache-2.0",
  "dependencies": {
    "fake-indexeddb": "^6.2.5",
    "fs": "^0.0.1-security",
    "ws": "^8.18.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "esbuild": "0.25.3",
    "mock-socket": "^9.3.1",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": false,
    "arrowParens": "avoid"
  },
  "browser": {
    "fs": false
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interplaynetary/mesh.git"
  },
  "bugs": {
    "url": "https://github.com/interplaynetary/mesh/issues"
  },
  "homepage": "https://github.com/interplaynetary/mesh/wiki"
}
